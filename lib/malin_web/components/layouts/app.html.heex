<div class="h-[100dvh] w-full grid grid-rows-mobile lg:grid-rows-desktop grid-cols-1 lg:grid-cols-[auto_auto]">
  <div class="fixed top-0 left-0 right-0 flex items-center justify-between gap-4 bg-transparent z-40 min-h-[100px]">
    <div class="w-screen flex justify-between items-center">
      <.link navigate={~p"/"} class="px-8 py-4">
        <img src={~p"/images/logo.svg"} width="80px" />
      </.link>
      <div>
        <.link>Kontakta mig</.link>
        <.link>Fokus 360</.link>
        <.link>Logga in</.link>
      </div>
    </div>
  </div>

  <main class="order-3 col-span-2 overflow-y-auto flex flex-col justify-stretch h-[100dvh]">
    {@inner_content}
  </main>

  <footer class="order-5 col-span-2 lg:pb-[2px] bg-transparent border-t border-divider hidden h-[24px] px-4 lg:flex justify-center">
    <div class="items-center justify-between text-xs text-grey w-full flex">
      <div class="flex items-center gap-2">
        <span>
          &copy; 2024 Malin H Consulting AB
        </span>
        <.link
          :if={@current_user != nil && @current_user.role == :admin}
          navigate={~p"/admin"}
          class="text-xs text-accent font-semibold flex items-center gap-1"
        >
          <span>Admin</span>
          <.icon name="hero-arrow-up-right" class="h-3 w-3" />
        </.link>
      </div>

      <div class="flex items-center gap-4 text-brand">
        <%= if @current_user do %>
          <.link navigate={~p"/sign-out"}>Log out</.link>
        <% else %>
          <.link navigate={~p"/sign-in"}>Log In</.link>
        <% end %>
      </div>
    </div>
  </footer>
</div>
