<div class="min-h-screen bg-gray-50 py-8 pt-24">
  <div class="max-w-4xl mx-auto px-4">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Meddelanden</h1>
      <p class="text-gray-600 mt-2">
        {length(@messages)} meddelanden totalt
        <%= if @unread_count > 0 do %>
          â€¢ <span class="text-red-600 font-medium">{@unread_count} olÃ¤sta</span>
        <% end %>
      </p>
    </div>
    
<!-- Messages List -->
    <div class="space-y-4">
      <div :for={message <- @messages} class="bg-white rounded-lg shadow-sm border">
        <!-- Message Header -->
        <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <!-- Read/Unread indicator -->
            <div class={[
              "w-3 h-3 rounded-full",
              if(message.read_at, do: "bg-green-500", else: "bg-red-500")
            ]}>
            </div>
            
<!-- Sender info -->
            <div>
              <h3 class="font-medium text-gray-900">
                {message.user.first_name} {message.user.last_name}
              </h3>
              <p class="text-sm text-gray-500">{message.user.email}</p>
            </div>
          </div>
          
<!-- Timestamp and actions -->
          <div class="flex items-center space-x-4">
            <span class="text-sm text-gray-500"></span>
            
<!-- Toggle read button -->
            <button
              phx-click="toggle_read"
              phx-value-id={message.id}
              class={[
                "px-3 py-1 rounded-md text-sm font-medium transition-colors",
                if(message.read_at,
                  do: "bg-gray-100 text-gray-700 hover:bg-gray-200",
                  else: "bg-blue-100 text-blue-700 hover:bg-blue-200"
                )
              ]}
            >
              {if message.read_at, do: "Markera som olÃ¤st", else: "Markera som lÃ¤st"}
            </button>
          </div>
        </div>
        
<!-- Message Content -->
        <div class="px-6 py-4">
          <div class="prose prose-gray max-w-none">
            <p class="whitespace-pre-wrap text-gray-800">{message.content}</p>
          </div>
        </div>
      </div>
    </div>
    
<!-- Empty state -->
    <%= if length(@messages) == 0 do %>
      <div class="text-center py-12">
        <div class="text-gray-400 text-6xl mb-4">ğŸ“¬</div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Inga meddelanden</h3>
        <p class="text-gray-500">Nya meddelanden kommer att visas hÃ¤r.</p>
      </div>
    <% end %>
  </div>
</div>
